<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Tax Group -->
        <record id="tax_group_kode_unik" model="account.tax.group">
            <field name="name">Kode Unik</field>
        </record>

        <!-- Kode Unik Tax -->
        <record id="tax_kode_unik" model="account.tax">
            <field name="name">Kode Unik</field>
            <field name="amount_type">fixed</field>
            <field name="amount">0.0</field>
            <field name="type_tax_use">sale</field>
            <field name="tax_group_id" ref="tax_group_kode_unik"/>
            <field name="is_unique_code_tax" eval="True"/>
        </record>

        <record id="product_product_kode_unik" model="product.product">
            <field name="name">Kode Unik</field>
            <field name="type">service</field>
            <field name="default_code">KODEUNIK</field>
            <field name="list_price">0.0</field>
            <field name="standard_price">0.0</field>
            <field name="invoice_policy">order</field>
            <field name="sale_ok" eval="True"/>
            <field name="website_published" eval="True"/>
            <field name="available_in_pos" eval="False"/>
            <field name="taxes_id" eval="[(6, 0, [ref('tax_kode_unik')])]"/>
            <field name="supplier_taxes_id" eval="[(5, 0, 0)]"/>
        </record>
    </data>
</odoo>
