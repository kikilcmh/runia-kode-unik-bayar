<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form_inherit_unique_code" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.unique.code</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="amount_unique_code" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="amount_unique_code == 0"/>
            </xpath>
        </field>
    </record>
</odoo>
