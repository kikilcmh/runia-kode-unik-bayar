<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_unique_code" model="ir.ui.view">
        <field name="name">account.move.form.inherit.unique.code</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='tax_totals']" position="before">
                <field name="amount_unique_code" widget="monetary" options="{'currency_field': 'currency_id'}" invisible="amount_unique_code == 0"/>
            </xpath>
        </field>
    </record>
</odoo>
