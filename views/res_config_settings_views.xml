<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_runia_kode_unik" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.runia.kode.unik</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="90"/>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <app string="Kode Unik Bayar" name="runia_kode_unik_bayar" data-string="Kode Unik Bayar">
                    <block title="Konfigurasi Kode Unik" name="runia_kode_unik_settings">
                        <setting string="Batas Kode Unik" help="Nilai maksimal kode unik sebelum reset kembali ke 1.">
                            <field name="unique_code_limit"/>
                        </setting>
                        <setting string="Kode Terakhir" help="Angka terakhir yang digunakan.">
                            <field name="last_code"/>
                        </setting>
                    </block>
                </app>
            </xpath>
        </field>
    </record>
</odoo>
